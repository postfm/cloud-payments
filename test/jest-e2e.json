{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/my-library/(.*)": "<rootDir>/../libs/my-library/src/$1",
    "@app/my-library": "<rootDir>/../libs/my-library/src",
    "@app/cloud-payment/(.*)": "<rootDir>/../libs/cloud-payment/src/$1",
    "@app/cloud-payment": "<rootDir>/../libs/cloud-payment/src"
  }
}